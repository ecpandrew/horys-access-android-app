<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.klsdinfo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:icon="@drawable/ic_logo_round"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_logo_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name="com.example.klsdinfo.VerifyActivity">
        </activity>

        <activity android:name="com.example.klsdinfo.RegisterActivity">
        </activity>

        <activity
                android:name="com.example.klsdinfo.LoginActivity"
                android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
                android:name="com.example.klsdinfo.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>